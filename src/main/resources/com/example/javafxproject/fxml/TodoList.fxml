<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxproject.controller.TodoListController">

    <ListView fx:id="todoListView" VBox.vgrow="ALWAYS"/>

    <TextField fx:id="todoInput" promptText="새 할 일을 입력하세요"/>

    <Button text="추가할게영" onAction="#addTodoItem"/>
    <Button text="삭제할게영" onAction="#deleteTodoItem"/>
    <Button text="전체 삭제할게영" onAction="#clearAllItems"/>
</VBox>